<div
    id="navbar"
    class="fixed z-50 w-full top-0 lg:flex justify-between px-14 py-4 shadow-lg bg-white"
>
    <div class="flex justify-between">
        <span class="text-primary text-lg md:text-xl font-bold">
            <a href="#">Lokmangal Logo</a>
        </span>
        <button class="lg:hidden" id="hamburgerBtn">
            <i class="fa-solid fa-bars"></i>
        </button>
    </div>
    <nav class="lg:block">
        <ul class="mt-3 lg:mt-0 lg:flex">
            <li class="mt-3 lg:mt-0 lg:ml-10"><a href="#">Home</a></li>
            <li class="mt-3 lg:mt-0 lg:ml-10"><a href="#about">About Us</a></li>
            <li class="mt-3 lg:mt-0 lg:ml-10">
                <a href="#objectives">Our Objectives</a>
            </li>
            <li class="mt-3 lg:mt-0 lg:ml-10">
                <a href="#programs">Government Sponsored Programs</a>
            </li>
            <li class="mt-3 lg:mt-0 lg:ml-10">
                <a
                    href="#contact"
                    class="bg-primary px-5 py-1.5 text-white rounded-md"
                >
                    Contact Us
                </a>
            </li>
        </ul>
    </nav>
</div>

<script>
    const hamburger: HTMLElement = document.querySelector("#hamburgerBtn")!;
    const nav: HTMLElement = document.querySelector("nav")!;
    const liArr = document.querySelectorAll("nav li")!;
    hamburger.addEventListener("click", () => {
        nav.classList.toggle("transform");
    });
    liArr.forEach((li) => {
        li.addEventListener("click", () => {
            nav.classList.toggle("transform");
        });
    });
</script>

<style>
    @media screen and (max-width: 768px) {
        nav {
            background-color: white;
            position: absolute;
            left: 0;
            width: 100%;
            transform: scaleY(0);
            transform-origin: top;
            transition: all 0.5s ease-in-out;
            @apply px-14 pb-4 shadow-lg;
        }
        nav.transform {
            transform: scaleY(1);
        }
    }
</style>
