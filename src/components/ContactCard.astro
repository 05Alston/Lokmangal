---
interface props {
    title: string;
    icon: string;
}
const { title, icon } = Astro.props as props;
---

<div
    class="flex flex-col justify-start bg-secondary shadow-lg w-full px-10 py-6 rounded-md"
>
    <!-- <slot name="icon" /> -->
    <i class={"text-primary mb-4 text-4xl " + icon}></i>
    <h3 class="font-semibold text-xl mb-3">{title}</h3>
    <slot />
</div>
