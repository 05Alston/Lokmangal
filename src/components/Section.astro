---
export interface props {
    id: string;
    title: string;
    titleSubText?: string;
    className?: string;
}

const { id, title, titleSubText, className = "" } = Astro.props as props;
---

<section
    id={id}
    class={"px-8 md:px-12 lg:px-24 py-14 scroll-mt-14 " + className}
>
    <div class="container mx-auto">
        <!-- Section Title -->
        <div class="text-center pb-14">
            <h2 class="mb-2 text-3xl text-center font-bold relative">
                {title}
            </h2>
            {titleSubText && <p class="mb-0">{titleSubText}</p>}
        </div>
        <!-- Content -->
        <slot />
    </div>
</section>

<style>
    h2:before,
    h2:after {
        content: "";
        width: 50px;
        height: 2px;
        display: inline-block;
        @apply bg-primary;
    }
    h2:before {
        margin: 0 15px 10px 0;
    }

    h2:after {
        margin: 0 0 10px 15px;
    }
</style>
