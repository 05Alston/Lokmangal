---
import SectionTitle from "./SectionTitle.astro";

export interface props {
    id: string;
    title: string;
    titleSubText?: string;
    className?: string;
}

const { id, title, titleSubText, className } = Astro.props as props;
---

<section id={id} class={"px-8 md:px-12 lg:px-24 py-14 " + className}>
    <div class="container mx-auto">
        <SectionTitle title={title} subText={titleSubText} />
        <slot />
    </div>
</section>
